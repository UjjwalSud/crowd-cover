@model IEnumerable<CrowdCover.Web.Models.Sharpsports.BetSlip>

@{
    ViewData["Title"] = "Bet Slips";
}

<h1>Bet Slips</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Bet Slip</a>
</p>

<table id="betSlipsTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Bettor)</th>
            <th>@Html.DisplayNameFor(model => model.Book.Name)</th>
            <th>@Html.DisplayNameFor(model => model.BettorAccount)</th>
            <th>@Html.DisplayNameFor(model => model.BookRef)</th>
            <th>@Html.DisplayNameFor(model => model.TimePlaced)</th>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(model => model.OddsAmerican)</th>
            <th>@Html.DisplayNameFor(model => model.AtRisk)</th>
            <th>@Html.DisplayNameFor(model => model.ToWin)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.Outcome)</th>
            <th>@Html.DisplayNameFor(model => model.NetProfit)</th>
            <th>@Html.DisplayNameFor(model => model.DateClosed)</th>
            <th>@Html.DisplayNameFor(model => model.TimeClosed)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Bettor)</td>
                <td>@Html.DisplayFor(modelItem => item.Book.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.BettorAccount)</td>
                <td>@Html.DisplayFor(modelItem => item.BookRef)</td>
                <td>@Html.DisplayFor(modelItem => item.TimePlaced)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.OddsAmerican)</td>
                <td>@Html.DisplayFor(modelItem => item.AtRisk)</td>
                <td>@Html.DisplayFor(modelItem => item.ToWin)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.Outcome)</td>
                <td>@Html.DisplayFor(modelItem => item.NetProfit)</td>
                <td>@Html.DisplayFor(modelItem => item.DateClosed)</td>
                <td>@Html.DisplayFor(modelItem => item.TimeClosed)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- DataTables initialization -->
    <script>
        $(document).ready(function () {
            $('#betSlipsTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true
            });
        });
    </script>
}
