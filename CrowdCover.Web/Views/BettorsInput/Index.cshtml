@model IEnumerable<CrowdCover.Web.Models.Sharpsports.Bettor>

@{
    ViewData["Title"] = "Bettors";
}

<h1>Bettors</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Bettor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InternalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BetRefreshRequested)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Metadata.Handle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Metadata.WinPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Metadata.NetProfit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InternalId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BetRefreshRequested)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Metadata.Handle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Metadata.WinPercentage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Metadata.NetProfit)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
