@model IEnumerable<CrowdCover.Web.Models.Sharpsports.Event>

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</p>

<table id="eventsTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            @*  <th>@Html.DisplayNameFor(model => model.SportsdataioId)</th>
            <th>@Html.DisplayNameFor(model => model.SportradarId)</th>
            <th>@Html.DisplayNameFor(model => model.OddsjamId)</th>
            <th>@Html.DisplayNameFor(model => model.TheOddsApiId)</th> *@
            <th>@Html.DisplayNameFor(model => model.Sport)</th>
            <th>@Html.DisplayNameFor(model => model.League)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.NameSpecial)</th>
            <th>@Html.DisplayNameFor(model => model.StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.SportId)</th>
            <th>@Html.DisplayNameFor(model => model.LeagueId)</th>
            <th>@Html.DisplayNameFor(model => model.ContestantAway.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.ContestantHome.FullName)</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* <td>@Html.DisplayFor(modelItem => item.SportsdataioId)</td>
            <td>@Html.DisplayFor(modelItem => item.SportradarId)</td>
            <td>@Html.DisplayFor(modelItem => item.OddsjamId)</td>
            <td>@Html.DisplayFor(modelItem => item.TheOddsApiId)</td> *@
                <td>@Html.DisplayFor(modelItem => item.Sport)</td>
                <td>@Html.DisplayFor(modelItem => item.League)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.NameSpecial)</td>
                <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.SportId)</td>
                <td>@Html.DisplayFor(modelItem => item.LeagueId)</td>
                <td>@Html.DisplayFor(modelItem => item.ContestantAway.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.ContestantHome.FullName)</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- DataTables initialization -->
    <script>
        $(document).ready(function () {
            $('#eventsTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true
            });
        });
    </script>
}
