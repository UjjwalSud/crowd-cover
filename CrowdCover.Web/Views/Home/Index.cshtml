@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout2.cshtml"; // Specify the layout
}

<!-- Hero section with image and centered text -->
<div class="hero">
    <img src="~/img/bg3.webp" alt="CrowdCover Sports" class="hero-image img-fluid">
    <div class="hero-text text-center">
        @* <h1 class="display-4">Welcome To CrowdCover!</h1>
        <p>21st Century Sports Gambling</p> *@
    </div>
</div>

<!-- Additional Custom Styles -->
<style>
    /* Adjust hero height based on the image size */
    .hero {
        position: relative;
        height: 70vh; /* Adjust the height based on the image size */
        width: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .hero-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1; /* Ensure the image is behind the text */
    }

    /* Center the text in the middle of the hero section */
    .hero-text {
        position: relative;
        z-index: 1; /* Ensure text is above the image */
        color: #fff;
    }

    /* Ensure the body and html take the full viewport height */
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    /* Media query to adjust the height for smaller screens */
    @@media (max-width: 768px) {
        .hero {
            height: 50vh; /* Reduce height for mobile devices */
        }
    }
</style>
